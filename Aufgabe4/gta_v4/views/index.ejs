<html lang="en">

<head>

    <!-- Leaflet CSS and JavaScript (in this order) -->
    <link rel='stylesheet' href='https://unpkg.com/leaflet@1.9.4/dist/leaflet.css'
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""></script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <header class="header">
        <img src="./images/location.png" class="header__image" alt="an image of a map and location" width="50px">
        <h1 class="header__title">GeoTagApp</h1>
        <nav class="header__navigation">-
            <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
        </nav>
    </header>

    <main class="main">
        
    <!--section class="main__tagging tagging"-->
            <h2 class="tagging__titel">Tagging</h2>

            <!-- ############### VS1Lab 1a Form 1 Start -->
            <form id="tag-form" action="#"> 
                <fieldset>
                    <legend><b>Add a new GeoTag</b></legend>
                    <div id="label">Latitude:</div>
                    <div>
                        <input
                            id="tagging_latitude"
                            type="text"
                            name="latitude"
                            value="<%= latitude %>"
                            placeholder="49.01379"
                            readonly
                        />
                    </div>
                    <div id="label">Longitude:</div>
                    <div>
                        <input
                            id="tagging_longitude"
                            type="text"
                            name="longitude"
                            value="<%= longitude %>"
                            placeholder="8.390071"
                            readonly
                        />
                    </div>
                    <div id="label">Name:</div>
                    <div>
                        <input
                            type="text"
                            name="name"
                            maxlength="10"
                            placeholder="e.g Central Berlin"
                            required
                        />
                    </div>
                    <div id="label">Hashtag:</div>
                    <div>
                        <input
                            type="text"
                            name="hashtag"
                            pattern="^#[a-z]+$"
                            maxlength="10"
                            placeholder="e.g #ber"
                            required
                        />
                    </div>
                    <button type="submit">Add Tag</button>
                </fieldset>
            </form>
            <!-- ############### VS1Lab 1a Form 1 End -->
        <!--/section-->

        <!--section class="main__discovery discovery"-->
            <h2 class="discovery__title">Discovery</h2>

            <!-- ############### VS1Lab 1a Form 2 Start -->
            <form class="discovery__search" id="discoveryFilterForm" action="#">
                <fieldset>
                    <legend><b>Search</b></legend>
                    <div id="label">Search term or keyword:</div>
                        <div><input type="text" name="keyword" placeholder="e.g. Berlin"/></div>
                    <button type="submit" >Search</button>

                    <input type="hidden" id="oolatitude" name="latitude" value="<%= searchLatitude %>" >
                    <input type="hidden" id="oolongitude" name="longitude" value="<%= searchLongitude %>" >

                </fieldset>
            </form>
            <!-- ############### VS1Lab 1a Form 2 End -->

            <div class="discovery__wrapper">
                <div class="discovery__taglist">
                    <ul class="discovery__results" id="discoveryResults">
                        <% if (taglist && taglist.length > 0) { %>
                            <% taglist.forEach(tag => { %>
                                <li><%= tag.name %> (<%= tag.latitude %>, <%= tag.longitude %>) <%= tag.hashtag %></li>
                            <% }); %>
                        <% } else { %>
                            <li>Keine Tags gefunden</li>
                        <% } %>
                    </ul>
                </div>

                <div id="map" class="discovery__map" <% console.log("Taglist im Template:", taglist); %><% console.log("Taglist im Template:", taglist); %>data-tags='<%= JSON.stringify(taglist || []) %>'>
                    <img src="./images/mapview.jpg" alt="a map with locations" id="mapView" /><br>
                    <span id="resultMap">Result map</span>
                </div>
            </div>
        <!--/section-->
    </main>

    <footer class="footer">
        <span>(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>

    <!-- Load JavaScripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    

    <script type="module" src="./javascripts/location-helper.js"></script>
<script type="module" src="./javascripts/map-manager.js"></script>
<script type="module" src="./javascripts/geotagging.js"></script>

</body>

</html>

